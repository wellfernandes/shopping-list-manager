        android:text="Itens:"
        app:layout_constraintStart_toEndOf="@+id/textViewPriceValue"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameValue" />

    <TextView
        android:id="@+id/textViewQntValue"
        android:layout_width="84dp"
