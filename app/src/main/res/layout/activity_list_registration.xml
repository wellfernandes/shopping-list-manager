<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ListRegistrationActivity">

    <EditText
        android:id="@+id/editTextNewList"
        android:layout_width="355dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleListName" />

    <Spinner
        android:id="@+id/spinnerLists"
        android:layout_width="355dp"
        android:layout_height="58dp"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/editTextNewList"
        app:layout_constraintStart_toStartOf="@+id/editTextNewList"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="122dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:onClick="clearText"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="@+id/spinnerLists"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLists" />

    <TextView
        android:id="@+id/textViewTitleListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Nome da Lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Prioridade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewList" />

</androidx.constraintlayout.widget.ConstraintLayout>